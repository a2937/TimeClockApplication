@model IEnumerable<Department>
@{
    <div class="bg-primary m-1 p-1 text-white"><h4>Departments</h4></div>

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <table class="table table-sm table-bordered">
        <tr>
            <th>ID</th>
            <th>Department Name</th>
			<th> Users</th>
			<th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">
                    No Departments Stored
                </td>
            </tr>
        }
        else
        {
            foreach (Department depo in Model)
            {
                <tr>
                    <td>@depo.Id</td>
                    <td>@depo.Name</td>
					 <td user-department="@depo.Id"> </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@depo.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@depo.Id">Edit</a>
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>


            }

        }
    </table>

    <a class="btn btn-primary" asp-action="Create">Create</a>
}


