@model ApplicationUser
@{
    <div class="bg-primary m-1 p-1" ><h4>Edit User</h4></div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" placeholder="@Model.Email" class="form-control" />
        </div>
        <div>
            <label for="Password">Password</label>
            <input name="Password" type="password" class="form-control" />
        </div>
        <div>
            <label for="FirstName">First Name</label>
            <input name="FirstName" value="@Model.FirstName" class="form-control" />
        </div>
        <div>
            <label for="LastName">Last Name</label>
            <input name="LastName" value="@Model.LastName" class="form-control" />
        </div>
        <div>
            <label for="HourlyWage">Hourly Wage</label>
            <input type="number" name="HourlyWage" value="@Model.HourlyWage" class="form-control" />
        </div>
        <div>
            <label for="ExceptFromOvertime">Except From Overtime</label>
            @Html.CheckBoxFor(x => x.ExceptFromOvertime)
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
