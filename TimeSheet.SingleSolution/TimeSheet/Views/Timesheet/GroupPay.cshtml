@model GroupPayOverallViewModel
@{
    
    ViewData["Title"] = "Pay per group.";
}

<div class="panel panel-default">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td> Department Id</td>
                <td> Department Name</td>
                <td> Date </td>
                <td> Payment </td>
            </tr>
        </thead>
      
        @foreach (var item in Model.GroupPayments)
        {
           
            <tr>
                <td>
                    @item.DepartmentId
                </td>
                <td>
                    @item.DepartmentName
                </td>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    @item.MoneyPaidToDepartment
                </td>
            </tr>
        }
    </table>
</div>

