@model WorkDay

@{
    <div class="bg-primary m-1 p-1"><h4>Create WorkDay</h4> </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <input name="EmployeeId" hidden value="@ViewBag.Id" />
        </div>
        <div class="form-group">
            <label for="Date">The date</label>
            <input name="Date" type="date" placeholder=@DateTime.Today.ToString("MM-dd-yyyy") value="@DateTime.Today.ToString("yyyy-MM-dd")"class="form-control" />
        </div>
        <div class="form-group">
            <label for="IsVacationDay">Is this supposed to be scheduled as a vacation day?</label>
            @Html.CheckBoxFor(x => x.IsVacationDay)
        </div>
        <div class="form-control">
            <label for="SignIn">If this will be a workday, what time will you be signing in?</label>
            <input asp-for="SignIn" type="time" class="form-control" value="@DateTime.Now.ToString("HH:mm")" />
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
